<?xml version="1.0" encoding="UTF-8"?>
<actionExtension xmlns:diffscope="http://schemas.diffscope.org/diffscope/actions/diffscope">
    <version>1.0</version>
    <id>org.diffscope.visualeditor</id>
    <configuration>
        <defaultCatalog>core.mainMenu</defaultCatalog>
        <translationContext
                text="Application::ActionText"
                class="Application::ActionClass"
                description="Application::ActionDescription"
        />
        <vars>
            <var key="APP_NAME" value="DiffScope" />
        </vars>
    </configuration>

    <items>
        <action id="org.diffscope.visualeditor.edit.editCurrentClipInPianoRoll" icon="midi" shortcut="Ctrl+P" />
        <action id="org.diffscope.visualeditor.view.scrollUp" icon="arrow_up" shortcut="Ctrl+Up" />
        <action id="org.diffscope.visualeditor.view.scrollDown" icon="arrow_down" shortcut="Ctrl+Down" />
        <action id="org.diffscope.visualeditor.view.scrollLeft" icon="arrow_left" shortcut="Ctrl+Left" />
        <action id="org.diffscope.visualeditor.view.scrollRight" icon="arrow_right" shortcut="Ctrl+Right" />
        <action id="org.diffscope.visualeditor.view.scrollUpPage" icon="chevron_double_up" shortcut="PgUp" />
        <action id="org.diffscope.visualeditor.view.scrollDownPage" icon="chevron_double_down" shortcut="PgDown" />
        <action id="org.diffscope.visualeditor.view.scrollLeftPage" icon="chevron_double_left" shortcut="Alt+PgUp" />
        <action id="org.diffscope.visualeditor.view.scrollRightPage" icon="chevron_double_right" shortcut="Alt+PgDown" />
        <action id="org.diffscope.visualeditor.view.scrollToTop" icon="arrow_import_up" shortcut="Ctrl+Home" />
        <action id="org.diffscope.visualeditor.view.scrollToBottom" icon="arrow_import_down" shortcut="Ctrl+End" />
        <action id="org.diffscope.visualeditor.view.scrollToLeftmost" icon="arrow_import_left" shortcut="Ctrl+Alt+Home" />
        <action id="org.diffscope.visualeditor.view.scrollToRightmost" icon="arrow_import_right" shortcut="Ctrl+Alt+End" />
        <action id="org.diffscope.visualeditor.view.scrollToPlaybackPosition" shortcut="Ctrl+Y" />
        <action id="org.diffscope.visualeditor.view.scrollToCurrentItem" shortcut="Ctrl+\\" />
        <action id="org.diffscope.visualeditor.view.verticalZoomIn" icon="zoom_in" shortcut="Ctrl+=" />
        <action id="org.diffscope.visualeditor.view.verticalZoomOut" icon="zoom_out" shortcut="Ctrl+-" />
        <action id="org.diffscope.visualeditor.view.horizontalZoomIn" icon="zoom_in" shortcut="Ctrl+Alt+=" />
        <action id="org.diffscope.visualeditor.view.horizontalZoomOut" icon="zoom_out" shortcut="Ctrl+Alt+-" />
        <action id="org.diffscope.visualeditor.view.resetVerticalScale" icon="arrow_autofit_height" shortcut="Ctrl+Shift+R" />
        <action id="org.diffscope.visualeditor.view.resetHorizontalScale" icon="arrow_autofit_width" shortcut="Ctrl+Alt+Shift+R" />

        <action id="org.diffscope.visualeditor.arrangementPanel.pointerTool" icon="cursor" />
        <action id="org.diffscope.visualeditor.arrangementPanel.pencilTool" icon="edit" />
        <action id="org.diffscope.visualeditor.arrangementPanel.scissorTool" icon="cut" />
        <action id="org.diffscope.visualeditor.arrangementPanel.selectTool" icon="rectangle_landscape_dash" />
        <action id="org.diffscope.visualeditor.arrangementPanel.handTool" icon="hand_left" />
        <action id="org.diffscope.visualeditor.mixerPanel.pointerTool" icon="cursor" />
        <action id="org.diffscope.visualeditor.mixerPanel.handTool" icon="hand_left" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.pointerTool" icon="cursor" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.pencilTool" icon="edit" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.scissorTool" icon="cut" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.selectTool" icon="rectangle_landscape_dash" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.handTool" icon="hand_left" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.additionalTracks" icon="more_vertical" diffscope:componentType="menu" />
        <action id="org.diffscope.visualeditor.arrangementPanel.snap" diffscope:componentType="widget" />
        <action id="org.diffscope.visualeditor.arrangementPanel.snapDuration" diffscope:componentType="menu" />
        <action id="org.diffscope.visualeditor.arrangementPanel.snapTuplet" diffscope:componentType="menu" />
        <action id="org.diffscope.visualeditor.arrangementPanel.autoPageScrolling" icon="playhead_panel_chevron_double" />
        <action id="org.diffscope.visualeditor.arrangementPanel.additionalTracks" icon="more_vertical" diffscope:componentType="menu" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.snap" diffscope:componentType="widget" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.snapDuration" diffscope:componentType="menu" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.snapTuplet" diffscope:componentType="menu" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.autoPageScrolling" icon="playhead_panel_chevron_double" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.editingClip" diffscope:componentType="widget" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.showTrackSelector" icon="navigation" />

        <action id="org.diffscope.visualeditor.panel.arrangement" catalog="org.diffscope.core.workspacePanelWidgets" icon="gantt_chart" diffscope:uniquePanel="true" diffscope:componentType="custom"/>
        <action id="org.diffscope.visualeditor.panel.mixer" catalog="org.diffscope.core.workspacePanelWidgets" icon="options_vertical" diffscope:uniquePanel="true" diffscope:componentType="custom"/>
        <action id="org.diffscope.visualeditor.panel.pianoRoll" catalog="org.diffscope.core.workspacePanelWidgets" icon="midi" diffscope:uniquePanel="true" diffscope:componentType="custom"/>

        <phony id="org.diffscope.visualeditor.arrangementPanel.additionalTrackWidgets" />
        <phony id="org.diffscope.visualeditor.pianoRollPanel.additionalTrackWidgets" />

        <action id="org.diffscope.visualeditor.arrangementPanel.additionalTracks.label" catalog="org.diffscope.visualeditor.arrangementPanel.additionalTrackWidgets" icon="tag" diffscope:componentType="custom" />
        <action id="org.diffscope.visualeditor.arrangementPanel.additionalTracks.tempo" catalog="org.diffscope.visualeditor.arrangementPanel.additionalTrackWidgets" icon="metronome" diffscope:componentType="custom" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.additionalTracks.label" catalog="org.diffscope.visualeditor.pianoRollPanel.additionalTrackWidgets" icon="tag" diffscope:componentType="custom" />
        <action id="org.diffscope.visualeditor.pianoRollPanel.additionalTracks.tempo" catalog="org.diffscope.visualeditor.pianoRollPanel.additionalTrackWidgets" icon="metronome" diffscope:componentType="custom" />

    </items>

    <layouts>
        <group id="org.diffscope.visualeditor.edit.editCurrentClipInPianoRollActions">
            <action id="org.diffscope.visualeditor.edit.editCurrentClipInPianoRoll" />
        </group>
        <menu id="org.diffscope.visualeditor.view.scroll">
            <group id="org.diffscope.visualeditor.view.scrollActions">
                <action id="org.diffscope.visualeditor.view.scrollUp" />
                <action id="org.diffscope.visualeditor.view.scrollDown" />
                <action id="org.diffscope.visualeditor.view.scrollLeft" />
                <action id="org.diffscope.visualeditor.view.scrollRight" />
            </group>
            <group id="org.diffscope.visualeditor.view.scrollPageActions">
                <action id="org.diffscope.visualeditor.view.scrollUpPage" />
                <action id="org.diffscope.visualeditor.view.scrollDownPage" />
                <action id="org.diffscope.visualeditor.view.scrollLeftPage" />
                <action id="org.diffscope.visualeditor.view.scrollRightPage" />
            </group>
            <group id="org.diffscope.visualeditor.view.scrollToActions">
                <action id="org.diffscope.visualeditor.view.scrollToTop" />
                <action id="org.diffscope.visualeditor.view.scrollToBottom" />
                <action id="org.diffscope.visualeditor.view.scrollToLeftmost" />
                <action id="org.diffscope.visualeditor.view.scrollToRightmost" />
                <separator />
                <action id="org.diffscope.visualeditor.view.scrollToPlaybackPosition" />
                <action id="org.diffscope.visualeditor.view.scrollToCurrentItem" />
            </group>
        </menu>
        <menu id="org.diffscope.visualeditor.view.zoom">
            <action id="org.diffscope.visualeditor.view.verticalZoomIn" />
            <action id="org.diffscope.visualeditor.view.verticalZoomOut" />
            <action id="org.diffscope.visualeditor.view.horizontalZoomIn" />
            <action id="org.diffscope.visualeditor.view.horizontalZoomOut" />
            <separator />
            <action id="org.diffscope.visualeditor.view.resetVerticalScale" />
            <action id="org.diffscope.visualeditor.view.resetHorizontalScale" />
        </menu>
        <menu id="org.diffscope.visualeditor.arrangementPanelToolBar">
            <group id="org.diffscope.visualeditor.arrangementPanelToolBar.toolActions">
                <action id="org.diffscope.visualeditor.arrangementPanel.pointerTool" />
                <action id="org.diffscope.visualeditor.arrangementPanel.pencilTool" />
                <action id="org.diffscope.visualeditor.arrangementPanel.scissorTool" />
                <action id="org.diffscope.visualeditor.arrangementPanel.selectTool" />
                <action id="org.diffscope.visualeditor.arrangementPanel.handTool" />
            </group>
            <group id="org.diffscope.visualeditor.arrangementPanelToolBar.snapActions">
                <action id="org.diffscope.visualeditor.arrangementPanel.snap" />
            </group>
            <stretch />
            <action id="org.diffscope.visualeditor.arrangementPanel.autoPageScrolling" />
        </menu>
        <menu id="org.diffscope.visualeditor.pianoRollPanelToolBar">
            <group id="org.diffscope.visualeditor.pianoRollPanelToolBar.toolActions">
                <action id="org.diffscope.visualeditor.pianoRollPanel.pointerTool" />
                <action id="org.diffscope.visualeditor.pianoRollPanel.pencilTool" />
                <action id="org.diffscope.visualeditor.pianoRollPanel.scissorTool" />
                <action id="org.diffscope.visualeditor.pianoRollPanel.selectTool" />
                <action id="org.diffscope.visualeditor.pianoRollPanel.handTool" />
            </group>
            <group id="org.diffscope.visualeditor.pianoRollPanelToolBar.snapActions">
                <action id="org.diffscope.visualeditor.pianoRollPanel.snap" />
            </group>
            <group id="org.diffscope.visualeditor.pianoRollPanelToolBar.editingClipActions">
                <action id="org.diffscope.visualeditor.pianoRollPanel.editingClip" />
            </group>
            <stretch />
            <action id="org.diffscope.visualeditor.pianoRollPanel.autoPageScrolling" />
        </menu>
        <menu id="org.diffscope.visualeditor.mixerPanelToolBar">
            <group id="org.diffscope.visualeditor.mixerPanelToolBar.toolActions">
                <action id="org.diffscope.visualeditor.mixerPanel.pointerTool" />
                <action id="org.diffscope.visualeditor.mixerPanel.handTool" />
            </group>
            <stretch />
        </menu>
        <menu id="org.diffscope.visualeditor.arrangementPanelTimelineToolBar">
            <action id="org.diffscope.core.insert.addTrack" />
            <stretch />
            <action id="org.diffscope.visualeditor.arrangementPanel.additionalTracks" />
        </menu>
        <menu id="org.diffscope.visualeditor.pianoRollPanelTimelineToolBar">
            <action id="org.diffscope.visualeditor.pianoRollPanel.showTrackSelector" />
            <stretch />
            <action id="org.diffscope.visualeditor.pianoRollPanel.additionalTracks" />
        </menu>
    </layouts>

    <insertions>
        <insertion target="org.diffscope.core.edit" anchor="last">
            <group id="org.diffscope.visualeditor.edit.editCurrentClipInPianoRollActions" />
        </insertion>
        <insertion target="org.diffscope.core.view" anchor="last">
            <menu id="org.diffscope.visualeditor.view.scroll" />
        </insertion>
        <insertion target="org.diffscope.core.view" anchor="last">
            <menu id="org.diffscope.visualeditor.view.zoom" />
        </insertion>
        <insertion target="org.diffscope.core.clipItemContextMenu" anchor="before" relativeTo="org.diffscope.core.genericItemContextMenuActions">
            <group id="org.diffscope.visualeditor.edit.editCurrentClipInPianoRollActions" />
        </insertion>
    </insertions>

</actionExtension>