<?xml version="1.0" encoding="UTF-8"?>
<actionExtension xmlns:diffscope="http://schemas.diffscope.org/diffscope/actions/diffscope">
    <version>1.0</version>
    <id>org.diffscope.core</id>
    <configuration>
        <defaultCatalog>core.mainMenu</defaultCatalog>
        <translationContext
            text="Application::ActionText"
            class="Application::ActionClass"
            description="Application::ActionDescription"
        />
        <vars>
            <var key="APP_NAME" value="DiffScope" />
        </vars>
    </configuration>

    <items>
        <action id="core.file.&amp;new" description="Create a project in a new window" shortcut="Ctrl+N" />
        <action id="core.file.&amp;open^" description="Open an existing project in a new window" shortcut="Ctrl+O" />
        <action id="core.file.&amp;save" shortcut="Ctrl+S" />

        <action id="core.se&amp;ttings^" description="Open application settings" class="Preferences" shortcut="Ctrl+,"/>
        <action id="core.pl&amp;ugins^" description="Open plugin configuration dialog" class="Preferences" shortcut=""/>

        <action id="core.show&amp;HomeWindow" description="Switch to home window if it is opened, or else open home window" class="Window" shortcut="Ctrl+Shift+H" />

        <action id="core.e&amp;xit" description="Quit ${APP_NAME}" class="Application" />

        <action id="core.home.recentFiles" description="Toggle &quot;Recent Files&quot; page" catalog="core.homeMenu"/>
        <action id="core.home.recoveryFiles" description="Toggle &quot;Recovery Files&quot; page" catalog="core.homeMenu" />
        <action id="core.home.gridView" description="Toggle grid view in &quot;Recent Files&quot; page" catalog="core.homeMenu" />
        <action id="core.home.listView" description="Toggle list view in &quot;Recent Files&quot; page" catalog="core.homeMenu" />

        <action id="core.edit.&amp;undo" shortcut="Ctrl+Z" />
        <action id="core.edit.&amp;redo" shortcut="Ctrl+Shift+Z" />
        <action id="core.edit.cu&amp;t" shortcut="Ctrl+X" />
        <action id="core.edit.&amp;copy" shortcut="Ctrl+C" />
        <action id="core.edit.&amp;paste" shortcut="Ctrl+V" />
        <action id="core.edit.pasteSpecial^" shortcut="Ctrl+Alt+V" />
        <action id="core.edit.&amp;delete" shortcut="Del" />
        <action id="core.edit.select&amp;All" shortcut="Ctrl+A" />
        <action id="core.edit.dese&amp;lect" shortcut="D" />
        <action id="core.edit.selectCurrent" shortcut="Ctrl+Space" />

        <action id="core.edit.select&amp;Up" shortcut="K" />
        <action id="core.edit.select&amp;Down" shortcut="J" />
        <action id="core.edit.select&amp;Left" shortcut="H" />
        <action id="core.edit.select&amp;Right" shortcut="L" />

        <action id="core.edit.move&amp;Up" shortcut="Ctrl+K" />
        <action id="core.edit.move&amp;Down" shortcut="Ctrl+J" />
        <action id="core.edit.move&amp;Left" shortcut="Ctrl+H" />
        <action id="core.edit.move&amp;Right" shortcut="Ctrl+L" />

        <action id="core.edit.moveAction" text="&amp;Move..." shortcut="Ctrl+T" />

        <action id="core.view.scroll&amp;Up" shortcut="Up" />
        <action id="core.view.scroll&amp;Down" shortcut="Down" />
        <action id="core.view.scroll&amp;Left" shortcut="Left" />
        <action id="core.view.scroll&amp;Right" shortcut="Right" />

        <action id="core.edit.moveCursor&amp;Up" shortcut="Ctrl+Up" />
        <action id="core.edit.moveCursor&amp;Down" shortcut="Ctrl+Down" /> 
        <action id="core.edit.moveCursor&amp;Left" shortcut="Ctrl+Left" />
        <action id="core.edit.moveCursor&amp;Right" shortcut="Ctrl+Right" />

        <action id="core.edit.extendSelection&amp;Up" shortcut="Shift+Up" />
        <action id="core.edit.extendSelection&amp;Down" shortcut="Shift+Down" />
        <action id="core.edit.extendSelection&amp;Left" shortcut="Shift+Left" />
        <action id="core.edit.extendSelection&amp;Right" shortcut="Shift+Right" />

        <action id="core.edit.shrinkSelection&amp;Up" shortcut="Ctrl+Shift+Up" />
        <action id="core.edit.shrinkSelection&amp;Down" shortcut="Ctrl+Shift+Down" />
        <action id="core.edit.shrinkSelection&amp;Left" shortcut="Ctrl+Shift+Left" />
        <action id="core.edit.shrinkSelection&amp;Right" shortcut="Ctrl+Shift+Right" />

        <action id="core.view.page&amp;Up" shortcut="PgUp" />
        <action id="core.view.page&amp;Down" shortcut="PgDown" />
        <action id="core.view.page&amp;Left" shortcut="Alt+PgUp" />
        <action id="core.view.page&amp;Right" shortcut="Alt+PgDown" />

        <action id="core.view.scrollTo&amp;Top" shortcut="Ctrl+Home" />
        <action id="core.view.scrollTo&amp;Bottom" shortcut="Ctrl+End" />
        <action id="core.view.scrollTo&amp;Start" shortcut="Ctrl+Alt+Home" />
        <action id="core.view.scrollTo&amp;End" shortcut="Ctrl+Alt+End" />

        <action id="core.view.scrollToCurrentTime" shortcut="Ctrl+Y" />

        <action id="core.timeIndicator.show&amp;MusicTime" description="Show music time (measure:beat:tick) on the time indicator" />
        <action id="core.timeIndicator.show&amp;AbsoluteTime" description="Show absolute time (minute:second.millisecond) on the time indicator" />
        <action id="core.timeline.&amp;goTo^" description="Navigate to a specific position" shortcut="Ctrl+Shift+G" />
        <action id="core.timeline.&amp;quickJump^" description="Quickly navigate to a specific position" shortcut="Ctrl+G" />
        <action id="core.timeline.goTo&amp;Start" description="Navigate to the start of current project" shortcut="Home"/>
        <action id="core.timeline.goToPreviousMeasure" shortcut="[" />
        <action id="core.timeline.goToPreviousBeat" shortcut="Ctrl+[" />
        <action id="core.timeline.goToPreviousTick" shortcut="Ctrl+Shift+[" />
        <action id="core.timeline.goTo&amp;End" description="Navigate to the end of current project" shortcut="End" />
        <action id="core.timeline.goToNextMeasure" shortcut="]" />
        <action id="core.timeline.goToNextBeat" shortcut="Ctrl+]" />
        <action id="core.timeline.goToNextTick" shortcut="Ctrl+Shift+]" />
        <action id="core.timeline.goInsideViewRange" shortcut="Ctrl+Alt+Y" />
        <action id="core.timeline.&amp;resetProjectTimeRange" description="Reset project end time based on project content" shortcut="Ctrl+., Ctrl+R" />

        <action id="core.workspace.workspaceLayout^" />
        <action id="core.workspace.default&amp;Layout" description="Apply the default workspace layout" diffscope:excludeFromCommands="true" />
        <action id="core.workspace.&amp;customLayouts" diffscope:excludeFromCommands="true" />
        <action id="core.workspace.saveLayout" text="&amp;Save Current Layout As..." diffscope:excludeFromCommands="true" />
        <action id="core.workspace.&amp;allPanels" diffscope:excludeFromCommands="true" />
        <action id="core.workspace.panelLeftTop" text="None (Left Top)" shortcut="Ctrl+Alt+1" diffscope:excludeFromCommands="true" />
        <action id="core.workspace.panelLeftBottom" text="None (Left Bottom)" shortcut="Ctrl+Alt+2" diffscope:excludeFromCommands="true" />
        <action id="core.workspace.panelRightTop" text="None (Right Top)" shortcut="Ctrl+Alt+3" diffscope:excludeFromCommands="true" />
        <action id="core.workspace.panelRightBottom" text="None (Right Bottom)" shortcut="Ctrl+Alt+4" diffscope:excludeFromCommands="true" />
        <action id="core.workspace.panelTopLeft" text="None (Top Left)" shortcut="Ctrl+Alt+5" diffscope:excludeFromCommands="true" />
        <action id="core.workspace.panelTopRight" text="None (Top Right)" shortcut="Ctrl+Alt+6" diffscope:excludeFromCommands="true" />
        <action id="core.workspace.panelBottomLeft" text="None (Bottom Left)" shortcut="Ctrl+Alt+7" diffscope:excludeFromCommands="true" />
        <action id="core.workspace.panelBottomRight" text="None (Bottom Right)" shortcut="Ctrl+Alt+8" diffscope:excludeFromCommands="true" />
        <action id="core.workspace.&amp;floatingPanels" diffscope:excludeFromCommands="true" />
        <action id="core.workspace.dockActionToSideBar" text="Add &amp;New Panel or Action" />

        <action id="core.view.show&amp;MenuBar" description="Show or hide the main menu bar" />
        <action id="core.view.showToo&amp;lBar" description="Show or hide the main tool bar" />
        <action id="core.view.show&amp;LeftSideBar" description="Show or hide the left side bar" />
        <action id="core.view.show&amp;RightSideBar" description="Show or hide the right side bar" />
        <action id="core.view.show&amp;TopSideBar" description="Show or hide the top side bar" />
        <action id="core.view.show&amp;BottomSideBar" description="Show or hide the bottom side bar" />
        <action id="core.view.show&amp;StatusBar" description="Show or hide the status bar" />

        <action id="core.window.&amp;nextProjectWindow" description="Switch to the next project window" shortcut="Ctrl+., J" />
        <action id="core.window.&amp;previousProjectWindow" description="Switch to the previous project window" shortcut="Ctrl+., K" />
        <action id="core.window.pro&amp;jectWindows" diffscope:excludeFromCommands="true" />

        <action id="core.documentations" text="&amp;Help" description="Show help contents" class="Help" shortcut="F1" />
        <action id="core.&amp;findActions^" class="Help" description="Find and trigger action by name" shortcut="Ctrl+Shift+P" />
        <action id="core.aboutApp" text="&amp;About ${APP_NAME}" description="Show information about ${APP_NAME}" class="Help"/>
        <action id="core.about&amp;Qt" description="Show information about Qt" class="Help"/>

        <menu id="core.mainMenu" topLevel="true" />
        <menu id="core.mainToolBarLeft" topLevel="true" />
        <menu id="core.mainToolBarMiddle" topLevel="true" />
        <menu id="core.mainToolBarRight" topLevel="true" />
        <menu id="core.mainStatusBar" topLevel="true" />
        <menu id="core.homeNavigation" topLevel="true"/>
        <menu id="core.homeTool" topLevel="true"/>

        <menu id="core.homePreferences" text="Preferences" />
        <menu id="core.homeHelp" text="Help" />

        <phony id="core.workspacePanelWidgets" topLevel="true" />

        <action id="core.statusText" diffscope:excludeFromCommands="true"/>
        <action id="core.panel.properties" catalog="core.workspacePanelWidgets" diffscope:uniquePanel="true" diffscope:excludeFromCommands="true"/>
        <action id="core.panel.plugins" catalog="core.workspacePanelWidgets" diffscope:excludeFromCommands="true"/>
        <action id="core.panel.arrangement" text="Arrangement" catalog="core.workspacePanelWidgets" diffscope:excludeFromCommands="true"/>
        <action id="core.panel.mixer" catalog="core.workspacePanelWidgets" diffscope:excludeFromCommands="true"/>
        <action id="core.panel.pianoRoll" catalog="core.workspacePanelWidgets" diffscope:excludeFromCommands="true"/>
        <action id="core.panel.notifications" catalog="core.workspacePanelWidgets" diffscope:excludeFromCommands="true"/>
        <action id="core.panel.tips" catalog="core.workspacePanelWidgets" diffscope:excludeFromCommands="true"/>
        <action id="core.widget.digitalClock" diffscope:excludeFromCommands="true"/>
    </items>

    <layouts>
        <menu id="core.mainMenu">
            <menu id="core.&amp;file">
                <group id="core.fileOpenActions">
                    <action id="core.file.new"/>
                    <action id="core.file.open" />
                    <action id="core.file.save" />
                </group>
                <group id="core.preferenceActions">
                    <action id="core.settings"/>
                    <action id="core.plugins"/>
                </group>
                <action id="core.exit" />
            </menu>
            <menu id="core.&amp;edit">
                <group id="core.edit.undoActions">
                    <action id="core.edit.undo" />
                    <action id="core.edit.redo" />
                </group>
                <group id="core.edit.generic">
                    <action id="core.edit.cut" />
                    <action id="core.edit.copy" />
                    <action id="core.edit.paste" />
                    <action id="core.edit.pasteSpecial" />
                    <action id="core.edit.delete" />
                    <action id="core.edit.selectAll" />
                    <action id="core.edit.deselect" />
                    <action id="core.edit.selectCurrent" />
                </group>
                <group id="core.edit.navigation">
                    <menu id="core.edit.moveCu&amp;rsor">
                        <action id="core.edit.moveCursorUp" />
                        <action id="core.edit.moveCursorDown" />
                        <action id="core.edit.moveCursorLeft" />
                        <action id="core.edit.moveCursorRight" />
                    </menu>
                    <menu id="core.edit.&amp;move">
                        <action id="core.edit.moveUp" />
                        <action id="core.edit.moveDown" />
                        <action id="core.edit.moveLeft" />
                        <action id="core.edit.moveRight" />
                        <separator />
                        <action id="core.edit.moveAction" />
                    </menu>
                    <menu id="core.edit.&amp;select">
                        <action id="core.edit.selectUp" />
                        <action id="core.edit.selectDown" />
                        <action id="core.edit.selectLeft" />
                        <action id="core.edit.selectRight" />
                    </menu>
                    <menu id="core.edit.&amp;extendSelection">
                        <action id="core.edit.extendSelectionUp" />
                        <action id="core.edit.extendSelectionDown" />
                        <action id="core.edit.extendSelectionLeft" />
                        <action id="core.edit.extendSelectionRight" />
                    </menu>
                    <menu id="core.edit.shrin&amp;kSelection">
                        <action id="core.edit.shrinkSelectionUp" />
                        <action id="core.edit.shrinkSelectionDown" />
                        <action id="core.edit.shrinkSelectionLeft" />
                        <action id="core.edit.shrinkSelectionRight" />
                    </menu>
                </group>
                <menu id="core.timeline">
                    <group id="core.timeIndicatorTimecodeFormatActions">
                        <action id="core.timeIndicator.showMusicTime" />
                        <action id="core.timeIndicator.showAbsoluteTime" />
                    </group>
                    <group id="core.timelineGoToActions">
                        <action id="core.timeline.goTo" />
                        <action id="core.timeline.quickJump" />
                    </group>
                    <group id="core.timelineBackNavigationActions">
                        <action id="core.timeline.goToStart" />
                        <action id="core.timeline.goToPreviousMeasure" />
                        <action id="core.timeline.goToPreviousBeat" />
                        <action id="core.timeline.goToPreviousTick" />
                    </group>
                    <group id="core.timelineForwardNavigationActions">
                        <action id="core.timeline.goToEnd" />
                        <action id="core.timeline.goToNextMeasure" />
                        <action id="core.timeline.goToNextBeat" />
                        <action id="core.timeline.goToNextTick" />
                    </group>
                    <action id="core.timeline.goInsideViewRange" />
                    <separator />
                    <action id="core.timeline.resetProjectTimeRange" />
                </menu>
            </menu>
            <menu id="core.&amp;view">
                <group id="core.workspaceActions">
                    <menu id="core.workspace" text="&amp;Workspace">
                        <group id="core.workspaceLayouts">
                            <action id="core.workspace.defaultLayout" />
                            <action id="core.workspace.customLayouts" />
                            <action id="core.workspace.saveLayout" />
                        </group>
                        <separator />
                        <action id="core.workspace.allPanels" />
                        <menu id="core.openedDockingPanels" text="Opened &amp;Docking Panels">
                            <action id="core.workspace.panelLeftTop" />
                            <action id="core.workspace.panelLeftBottom" />
                            <action id="core.workspace.panelRightTop" />
                            <action id="core.workspace.panelRightBottom" />
                            <action id="core.workspace.panelTopLeft" />
                            <action id="core.workspace.panelTopRight" />
                            <action id="core.workspace.panelBottomLeft" />
                            <action id="core.workspace.panelBottomRight" />
                        </menu>
                        <action id="core.workspace.floatingPanels" />
                        <separator />
                        <action id="core.dockActionToSideBar" />
                    </menu>
                </group>
                <group id="core.view.scrollActions">
                    <menu id="core.view.scroll">
                        <action id="core.view.scrollUp" />
                        <action id="core.view.scrollDown" />
                        <action id="core.view.scrollLeft" />
                        <action id="core.view.scrollRight" />
                    </menu>
                    <menu id="core.view.scrollByPage">
                        <action id="core.view.pageUp" />
                        <action id="core.view.pageDown" />
                        <action id="core.view.pageLeft" />
                        <action id="core.view.pageRight" />
                    </menu>
                    <menu id="core.view.scrollTo">
                        <action id="core.view.scrollToTop" />
                        <action id="core.view.scrollToBottom" />
                        <action id="core.view.scrollToStart" />
                        <action id="core.view.scrollToEnd" />
                    </menu>
                    <action id="core.view.scrollToCurrentTime" />
                </group>
                <group id="core.viewVisibilityActions">
                    <action id="core.view.showMenuBar" />
                    <action id="core.view.showToolBar" />
                    <action id="core.view.showLeftSideBar" />
                    <action id="core.view.showRightSideBar" />
                    <action id="core.view.showTopSideBar" />
                    <action id="core.view.showBottomSideBar" />
                    <action id="core.view.showStatusBar" />
                </group>
            </menu>
            <menu id="core.&amp;window">
                <action id="core.showHomeWindow" />
                <group id="core.window.projectWindowActions">
                    <action id="core.window.nextProjectWindow" />
                    <action id="core.window.previousProjectWindow" />
                    <action id="core.window.projectWindows" />
                </group>
            </menu>
            <menu id="core.help" text="&amp;Help">
                <action id="core.documentations" />
                <separator />
                <action id="core.findActions" />
                <separator />
                <group id="core.aboutActions">
                    <action id="core.aboutApp" />
                    <action id="core.aboutQt" />
                </group>
            </menu>
        </menu>

        <menu id="core.mainToolBarLeft">
            <action id="core.showHomeWindow" />
            <separator />
            <action id="core.file.open" />
            <action id="core.file.save" />
        </menu>

        <menu id="core.mainToolBarRight">
            <action id="core.findActions" />
            <action id="core.documentations" />
        </menu>

        <menu id="core.mainToolBarMiddle">
            <group id="core.toolBarTimelineNavigationActions">
                <action id="core.widget.digitalClock" />
                <action id="core.timeline.goToStart" />
                <action id="core.timeline.goToEnd" />
            </group>
        </menu>

        <menu id="core.mainStatusBar">
            <action id="core.statusText" />
            <stretch />
        </menu>

        <menu id="core.homeNavigation">
            <action id="core.file.new"/>
            <action id="core.file.open" />
        </menu>

        <menu id="core.homeTool">
            <menu id="core.homePreferences">
                <group id="core.preferenceActions" />
            </menu>
            <menu id="core.help" />
        </menu>
    </layouts>

</actionExtension>